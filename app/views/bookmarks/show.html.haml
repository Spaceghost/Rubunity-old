= content_for :breadcrumbs do
  %li Bookmarks
= content_for :actions do
  - if @bookmark.user == current_user
    %li= link_to 'Edit', edit_bookmark_path(@bookmark), :class => 'editleft'
  %li= link_to 'Back', bookmarks_path, :class => 'backleft'

%p#notice
  
%h1= @bookmark.title

%p
  Bookmarked :
  = @bookmark.created_at.to_s(:long)

%h2= @bookmark.url

%br

- if @url_status == true
  = link_to @bookmark.url do
    = image_tag '/images/buttons/btn_go_to_site.png'
- else
  = link_to @bookmark.url do
    = image_tag '/images/buttons/btn_go_to_site_red.png'

%h2.section
  Comments
  - if current_user
    %span{:style => "float:right"}
      %a.addleft{:href => "#topic_form", :onclick => "$('#comment_form').toggle()"} Add Comment
%br/
- if current_user
  #comment_form{:style => "display:none"}
    = form_for [@bookmark, Comment.new] do |f|
      %p
        = f.label :title
        = f.text_field :title
      %p
        = f.text_area :body, :cols => '103', :rows => '4'
      %p= f.submit 'Add Comment', :style => 'float:right'
      .clearer
      %br/
#comments
  - if ! @bookmark.comments.blank?
    - @bookmark.comments.each do |comment|
      = render 'comment', :comment => comment
  - else
    %p.sosumi No comments have been added

