.comment.normal
  %div{:style => "width:620px; float:left; padding:0 0 0 20px;"}
    .author{:style => "width:80px; float:left;"}
      = image_tag comment.user.profile_image('medium') do
        comment.user.nickname
    %p.info
      Posted
      %strong= comment.created_at.to_s(:long)
      by
      %strong= comment.user.nickname
    = comment.body
    %hr/
  
  .clearer

