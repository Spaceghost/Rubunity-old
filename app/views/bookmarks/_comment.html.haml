.comment.normal
  %div{:style => "width:620px; float:left; padding:0 0 0 20px;"}
    %p.info
      %span.title= comment.title
      Posted
      %strong= comment.created_at.to_s(:long)
      by
      %strong= comment.user.nickname
    = comment.body
  .author{:style => "width:80px; float:right;"}
    = image_tag comment.user.nickname
  .clearer

