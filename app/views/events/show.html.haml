- title @event.topic
%p#notice
%h1
  = @event.topic

%p
  = @event.event_date.strftime("%m/%d/%Y") + '-' + @event.start_time.strftime("%H:%M%p %Z")

%p
  Seats Available:
  = @event.available_slots


= @event.full? ? "Full" : link_to("Sign Up", event_sign_up_path(@event))
%br/
= link_to "Un Sign Up", event_un_sign_up_path(@event)
