!!! Strict
%html{:lang => "en", "xml:lang" => "en", :xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "en-us", "http-equiv" => "Content-Language"}/
    %title#page_title prb - Bookmarks
    = stylesheet_link_tag 'base'
    = stylesheet_link_tag 'standard'
    = stylesheet_link_tag 'sessioninfo'
    = stylesheet_link_tag 'coderay'
    = stylesheet_link_tag 'facebox'
    = javascript_include_tag :defaults
    = javascript_include_tag 'facebox'
  %body
    #container.subpage
      #header
        - link_to root_url, :title => "prb", :id => "logo" do
          %img#bird{:alt => "Tweet, tweet!", :src => "/images/prb.png"}/
        %h3{:style => "color:#999999; position:absolute; left:90px; top:15px"} Per general consensus, pants are required.
        = render :partial => 'layouts/sessioninfo'
      .clearer
      %br/
      #toolbar
        %ul#breadcrumbs{:style => "width:400px; float:left"}
          %li#home= link_to '&nbsp;', root_url
          = yield :breadcrumbs
        %ul#actions{:style => "width:300px; text-align:right; float:right"}
          = yield :actions
      .clearer
      .content-bubble-arrow{:style => "display:none;"}
      %table#content-table.columns{:cellspacing => "0", :style => "width:980px"}
        %tbody
          %tr
            %td#content.round-left{:style => "width:780px"}
              = flash.map {|type, msg| content_tag(:div, msg, :class => "#{type}", :id => "flash") }.join
              = yield
            %td#side_base.round-right{:style => "width:200px", :valign => "top"}
              #side
                #profile.section
                - if current_user
                  %p.promotion.round
                    = image_tag current_user.profile_image(:size => 40), :style => "margin-right:10px;", :class => 'side_thumb photo fn'
                    %span#me_name= current_user.nickname
                    %br/
                %h2#tt_menu.sidebar-title
                  %span Sections
                %hr/
                %ul#primary_nav.sidebar-menu
                  %li= link_to 'Bookmarks', bookmarks_path
                %br/
                #custom_search{:style => "text-align:center"}
                  - form_for search_path, :url => search_path, :method => 'post' do |f|
                    %input#search{:autosave => "prb_srch", :name => "query", :placeholder => "Search...", :results => "5", :style => "width:170px", :type => "search"}/
                %h2#tt_menu.sidebar-title
                  %span Categories
                %hr/
                %ul#primary_nav.sidebar-menu
                #following.collapsible.collapsed
                  /
                    <a href="/timeline/render_following_avatars" class="fetch-contents"></a><h2 class="sidebar-title" id="fm_menu"><span>Feeds</span></h2>
                #rssfeed
                  %hr/
                  %a.xref.rss.timeline-rss{:href => "/statuses/friends_timeline/94150012.rss", :rel => "alternate", :type => "application/rss+xml"} RSS feed
                  %a.xref.rss.search-rss{:href => "http://search.twitter.com/search.atom?q=", :rel => "alternate", :type => "application/rss+xml"} RSS feed for this query
                  %a.xref.rss.favorites-rss{:href => "/favorites/94150012.rss", :rel => "alternate", :type => "application/rss+xml"} RSS feed for favorites
    = render :partial => 'layouts/footer'
