#footer_top
  .holder
    .left
      #widget_recent_entries
        %h3 Recent Bookmarks
        %ul
          - @recent_bookmarks.each do |bookmark|
            %li= link_to bookmark.title, bookmark

    .right
      #twitterWidget
        #twitter
          %h3 Twitter Updates
          %ul#twitter_update_list
            %li
          %script{:src => "http://twitter.com/javascripts/blogger.js", :type => "text/javascript"}
          %script{:src => "http://twitter.com/statuses/user_timeline/remear.json?callback=twitterCallback2&count=3", :type => "text/javascript"}
          .dasheddivider
          %p{:align => "right"}
            %a.rightlink.png_crop{:href => "http://www.twitter.com/remear/"} Follow us on Twitter
    .divider