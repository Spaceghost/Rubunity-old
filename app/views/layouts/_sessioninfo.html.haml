#sessioninfo
  - if ! current_user
    #small_signup{:style => "width:400px; float:right; margin-top:0px"}
      %span New to rubunity?
      = link_to 'Sign up now', register_url, :class => "signup-button"
      Have an account? #{link_to 'Sign in', login_path, :class => "signin"}
    .clearer
  - else
    %table{:style => "float:right"}
      %tr
        %td{:rowspan => "2"}= image_tag current_user.profile_image, :style => "margin-right:10px;"
        %td{:style => "vertical-align:top"}
          %span{:style => "padding-right:20px;"}
            = current_user.first_name
            = current_user.last_name
            (#{current_user.nickname})
          - if current_user.admin?
            = link_to 'Admin', admin_path

          = link_to 'Settings', settings_path
          %span.sosumi
            |
          = link_to 'Report Bug', 'https://github.com/esparkman/Rubunity/issues'
          %span.sosumi
            |
          = link_to 'Logout', logout_path
          %span{:style => "padding-left:20px;"}
            %a.addleft{:href => "http://www.pledgie.com/campaigns/6762?canvas=false", :target => "_new"} Donate
