#sessioninfo
  - if ! current_user
    %span New to rubunity?
    = link_to 'Sign up now', register_url, :class => "signup-button"
    Have an account? #{link_to 'Sign in', login_path, :class => "signin"}
    
    #flyout{:style => 'display:none'}
      %form
        Email: 
        %input{:type => 'email'}
        %br
          
        Password: 
        %input{:type => 'password'}
  - else
    %table{:style => "float:right"}
      %tr
        %td{:style => "vertical-align:top"}
          Logged in as :
          %span{:style => "padding-right:20px;"}
            = current_user.first_name
            = current_user.last_name
            (#{current_user.nickname})
          - if current_user.admin?
            = link_to 'Admin', admin_path
            %span.sosumi
              |
          = link_to 'Settings', settings_path
          %span.sosumi
            |
          = link_to 'Report Bug', 'https://github.com/Rubunity/Rubunity/issues'
          %span.sosumi
            |
          = link_to 'Logout', logout_path
          %span{:style => "padding-left:20px;"}
            %a.addleft{:href => "http://www.pledgie.com/campaigns/6762?canvas=false", :target => "_new"} Donate
