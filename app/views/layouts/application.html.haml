!!!
%html

  %head
    %title
      Rubunity
      = "- " + yield(:title) unless !:title
    = stylesheet_link_tag 'application', 'flash'
    = javascript_include_tag 'jquery', 'rails', 'application', 'facebox'
    = csrf_meta_tag

  %body
    #container
      = render 'layouts/header'
      .clearer
      
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"

      #toolbar
        %ul#breadcrumbs
          %li#home= link_to '&nbsp;'.html_safe, '/'
          = yield :breadcrumbs
        %ul#actions
          = yield :actions
        .clearer

      #content
        = yield
      
    = render 'layouts/footer'
